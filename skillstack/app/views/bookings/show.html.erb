<main>
  <p>
    <strong>Lesson Title:</strong>
    <%= link_to @booking.lesson.try(:title), @booking.lesson %>
  </p>

  <p>
    <strong>Teacher:</strong>
    <%= link_to @booking.lesson.teacher.try(:first_name) + " " + @booking.lesson.teacher.try(:last_name), @booking.lesson.teacher %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= @booking.time %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @booking.date %>
  </p>

  <%= link_to 'Edit', edit_booking_path(@booking) %> |
  <%= link_to 'Back', bookings_path %>
</main>