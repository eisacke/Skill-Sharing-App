<h1>Bookings</h1>

<% @bookings.each do |booking| %>
  <ul>
    <li>Lesson Title: <%= booking.lesson.try(:title) %></li>
    <li>Lesson Teacher: <%= booking.lesson.teacher.try(:name) %></li>
    <li>Student: <%= booking.student.try(:first_name) %> <%= booking.student.try(:last_name) %></li>
    <li>Date: <%= booking.date %></li>
    <li>Time: <%= booking.time %></li>
    <li><%= link_to 'Show', booking %></li>
    <li><%= link_to 'Edit', edit_booking_path(booking) %></li>
    <li><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  </ul>

<% end %>



