<main>
  <div class="new">
    <h2>Login</h2>
    <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %><br>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
    <% end %>
    <br>
    <p>Not a user? Click <%= link_to "here", new_user_path, class: "bold" %> to sign up! </p>
  </div>
</main>