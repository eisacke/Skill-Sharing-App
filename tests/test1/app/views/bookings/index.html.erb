<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Lesson</th>
      <th>Date</th>
      <th>Time</th>
      <th>Confirmed</th>
      <th>Teacher</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.lesson_id %></td>
        <td><%= booking.date %></td>
        <td><%= booking.time %></td>
        <td><%= booking.confirmed %></td>
        <td><%= booking.teacher_id %></td>
        <td><%= booking.student_id %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
